class robot_arm_motor
    
instance variables
    motor_torque : real

thread
    periodic (1e8, 0, 0, 0) (step)

operations

    public robot_arm_motor: () ==> robot_arm_motor
    robot_arm_motor() == (
        motor_torque := 0.0;
    );

    public set_motor_torque: (real) ==> ()
    set_motor_torque(torque) == (
        motor_torque := torque
    );

    public step : () ==> ()
    step() == (
        RobotSystem`Robot.adjustArmPosition(motor_torque);
    );

end robot_arm_motor 